html
  head
    title Campus Rumor
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='style.css')
    script(src='jquery-3.1.1.min.js')
    script(src='main.js')
  body(onload='loading()')
    .top
      header.header   Campus Rumor
      .cont
        form#form-comment(action='/', method='POST')
          textarea#rumourbar(rows='4', name='message' placeholder="Enter Your Romors Here!!!!")
          textarea#fuckuser(rows='1', name='username' placeholder='Enter Username')
          #buttons.btn-group(role='group', aria-label='...')
            button#refreshbutton.btn.btn-default(type='button') Refresh
            button#postbutton1.btn.btn-default(type='button') Post
            button#postbutton2.btn.btn-default(type='button') Post Anonymously
    #spacer
    div
      each post in posts
        .thumbnail
          .caption
            h3='@'+post.username
            p=post.message
            p
      h5#tobeedited